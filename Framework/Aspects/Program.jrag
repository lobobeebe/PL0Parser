import java.util.*;
import Utility.SetRepUtility;
import AST.*;

//=========================================================================**
// Program Aspect
//=========================================================================**

aspect Program
{
    //=========================================================================**
    // progInitLabel()
    //=========================================================================**    

    syn Label Program.progInitLabel() = getProgramBlock().init();

    eq Program.getProgramBlock().progInitLabel() = progInitLabel();

    //=========================================================================**
    // inFlows()
    //=========================================================================**

    eq Program.getProgramBlock().inFlows() = SetRepUtility.emptySet();

    //=========================================================================**
    // next()
    //=========================================================================**

    eq Program.getProgramBlock().next() = null;

    //=========================================================================**
    // outFlows()
    //=========================================================================**

    eq Program.getProgramBlock().outFlows() = SetRepUtility.emptySet();

    //=========================================================================**
    // toString()
    //=========================================================================**

    syn String Program.toString() = unparse();

    //=========================================================================**
    // unparse()
    //=========================================================================**

    syn String Program.unparse();
    eq Program.unparse()
    {
        return getProgramBlock().unparse() + ".";
    }
}
